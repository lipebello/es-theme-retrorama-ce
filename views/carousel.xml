<theme>
  <formatVersion>7</formatVersion>

<view name="system">

	<carousel name="systemcarousel">
	  <color>ffffff00</color>
	  <size>.6 .17</size>
	  <logoSize>.065 .116</logoSize>
	  <logoScale>1.3</logoScale>
	  <logoAlignment>center</logoAlignment>
	  <maxLogoCount>5</maxLogoCount>
	  <pos>0 .119</pos>
	  <systemInfoDelay>0</systemInfoDelay>
	  <transitionSpeed>600</transitionSpeed>
	  <itemTemplate>
	  <image name="theLogoImage">
	  <path>{system:logo}</path>
	  </image>
	  </itemTemplate>
	  <zIndex>2</zIndex>
	</carousel>
	
	
</view>



  

</theme>